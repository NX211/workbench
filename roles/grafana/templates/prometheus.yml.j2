global:
  scrape_interval:     15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
       - alertmanager:9093

rule_files:
scrape_configs:
  - job_name: 'node'
    static_configs:
    - targets: ['node-exporter:9100']
  - job_name: prometheus
    scheme: http
    static_configs:
    - targets: ['prometheus:9090']
  - job_name: grafana
    scheme: http
    static_configs:
    - targets: ['grafana:3000']
  - job_name: traefik
    scheme: http
    static_configs:
    - targets: ['traefik:8082']
  - job_name: cadvisor
    scrape_interval: 5s
    static_configs:
    - targets: ['cadvisor:8080']
  - job_name: registry
    scrape_interval: 5s
    static_configs:
    - targets: ['registry:5001']