---
api:
  dashboard: true
  debug: false

serversTransport:
  insecureSkipVerify: true

entryPoints:
  web:
    address: ":80"
  websecure:
    address: ":443"
    forwardedHeaders:
      trustedIPs:
        - "127.0.0.1/32"
        - "10.10.0.1"
  mongodb:
    address: ":{{mongodb_port}}"
  rtmp:
    address: ":1935"

providers:
  docker:
    endpoint: "tcp://10.20.0.240:2375"
    exposedByDefault: false
    swarmMode: true
    watch: true
    network: {{traefik_network}}
  file:
    filename: /config.yml
    watch: true

certificatesResolvers:
  dnsChallenge:
    acme:
      email: support@{{project_tld}}
      storage: acme.json
      dnsChallenge:
        provider: dreamhost
        disablePropagationCheck: true
        delayBeforeCheck: 0

pilot:
    token: "0ae604b9-e403-4150-95c9-34fe538588db"

experimental:
  plugins:
    rewritebody:
      modulename: "github.com/traefik/plugin-rewritebody"
      version: "v0.3.1"
    traefik-themepark:
      moduleName: "github.com/packruler/traefik-themepark"
      version: "v1.2.2"